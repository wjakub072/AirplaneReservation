                            <DataTemplate>
                                <StackPanel Orientation="Vertical" DataContext="{Binding SeatsInRow[0]}">
                                    <Label HorizontalAlignment="Center" Content="{Binding Path=Number}"/>
                                    <Button Background="{Binding StateBrush, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                            Command="{Binding SelectSeatCommand}"
                                            Margin="3,0,3,3" 
                                            Width="20" 
                                            Height="30">
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" DataContext="{Binding SeatsInRow[1]}">
                                    <Label HorizontalAlignment="Center" Content="{Binding Path=Number}"/>
                                    <Button Background="{Binding StateBrush, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                            Command="{Binding SelectSeatCommand}"
                                            Margin="3,0,3,3" 
                                            Width="20" 
                                            Height="30">
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" DataContext="{Binding SeatsInRow[2]}">
                                    <Label HorizontalAlignment="Center" Content="{Binding Path=Number}"/>
                                    <Button Background="{Binding StateBrush, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                            Command="{Binding SelectSeatCommand}"
                                            Margin="3,0,3,3" 
                                            Width="20" 
                                            Height="30">
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" DataContext="{Binding SeatsInRow[3]}">
                                    <Label HorizontalAlignment="Center" Content="{Binding Path=Number}"/>
                                    <Button Background="{Binding StateBrush, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                            Command="{Binding SelectSeatCommand}"
                                            Margin="3,0,3,3" 
                                            Width="20" 
                                            Height="30">
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" DataContext="{Binding SeatsInRow[4]}">
                                    <Label HorizontalAlignment="Center" Content="{Binding Path=Number}"/>
                                    <Button Background="{Binding StateBrush, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                            Command="{Binding SelectSeatCommand}"
                                            Margin="3,0,3,3" 
                                            Width="20" 
                                            Height="30">
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" DataContext="{Binding SeatsInRow[5]}">
                                    <Label HorizontalAlignment="Center" Content="{Binding Path=Number}"/>
                                    <Button Background="{Binding StateBrush, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                            Command="{Binding SelectSeatCommand}"
                                            Margin="3,0,3,3" 
                                            Width="20" 
                                            Height="30">
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" DataContext="{Binding SeatsInRow[6]}">
                                    <Label HorizontalAlignment="Center" Content="{Binding Path=Number}"/>
                                    <Button Background="{Binding StateBrush, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                            Command="{Binding SelectSeatCommand}"
                                            Margin="3,0,3,3" 
                                            Width="20" 
                                            Height="30">
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" DataContext="{Binding SeatsInRow[8]}">
                                    <Label HorizontalAlignment="Center" Content="{Binding Path=Number}"/>
                                    <Button Background="{Binding StateBrush, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                            Command="{Binding SelectSeatCommand}"
                                            Margin="3,0,3,3" 
                                            Width="20" 
                                            Height="30">
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" DataContext="{Binding SeatsInRow[9]}">
                                    <Label HorizontalAlignment="Center" Content="{Binding Path=Number}"/>
                                    <Button Background="{Binding StateBrush, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                            Command="{Binding SelectSeatCommand}"
                                            Margin="3,0,3,3" 
                                            Width="20" 
                                            Height="30">
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" DataContext="{Binding SeatsInRow[10]}">
                                    <Label HorizontalAlignment="Center" Content="{Binding Path=Number}"/>
                                    <Button Background="{Binding StateBrush, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                            Command="{Binding SelectSeatCommand}"
                                            Margin="3,0,3,3" 
                                            Width="20" 
                                            Height="30">
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" DataContext="{Binding SeatsInRow[11]}">
                                    <Label HorizontalAlignment="Center" Content="{Binding Path=Number}"/>
                                    <Button Background="{Binding StateBrush, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                            Command="{Binding SelectSeatCommand}"
                                            Margin="3,0,3,3" 
                                            Width="20" 
                                            Height="30">
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" DataContext="{Binding SeatsInRow[12]}">
                                    <Label HorizontalAlignment="Center" Content="{Binding Path=Number}"/>
                                    <Button Background="{Binding StateBrush, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                            Command="{Binding SelectSeatCommand}"
                                            Margin="3,0,3,3" 
                                            Width="20" 
                                            Height="30">
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="4"
                    Grid.Column="3"
                    HorizontalAlignment="Right">
            <Button Content="ANULUJ"
                    Width="100"
                    Background="White"
                    BorderBrush="Transparent"
                    FontSize="18"
                    Foreground="#FF00488B"
                    Margin="5"
                    Command="{Binding TimetableNavigationCommand}"/>
            <Button Content="POTWIERDŹ"
                    Width="120"
                    Background="White"
                    BorderBrush="Transparent"
                    FontSize="18"
                    Foreground="#FF00488B"
                    Margin="5"
                    Command="{Binding ConfirmNavigationCommand}"
                    />
        </StackPanel>
    </Grid>
</UserControl>
